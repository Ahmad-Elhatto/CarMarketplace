<%- include ('../partials/header.ejs')%>
<main>
    <section class="form-container">
        <!-- Prompt message -->
        <h1 class="form-prompt">
            Join the AutoHaven community today!
        </h1>
        
        <!-- Sign-Up form -->
        <form class="form-element" action="/users" method="POST">
            <div class="label-grouper">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            
            <div class="label-grouper">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            
            <div class="label-grouper">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            
            <div class="label-grouper">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="8" maxlength="64" required>
            </div>
        
            <button type="submit" class="submit-btn">Sign Up</button>
        </form>
    </section>
</main>
<%- include ('../partials/footer.ejs')%>
