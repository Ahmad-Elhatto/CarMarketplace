<%- include ('../partials/header.ejs')%>
        <main>
            <% if(vehicles.length) { %>
                <section class="item-container">
                    <% vehicles.forEach(vehicle => { %>
                       <a href="/market/<%= vehicle.id %>">
                            <div class="item">
                                <img src="<%= vehicle.image %>" alt="image of a vehicle">
                                <h2 class="item-title"><%= vehicle.title %></h2>
                                <p class="item-year">Year: <%= vehicle.year %></p>
                                <p class="item-condition">Miles: <%= vehicle.mileage %></p>
                                <hr>
                                <div class="price-offers">
                                    <h3 class="item-price">$<%= vehicle.price %></h3>
                                    <h3 class="item-offer">Offers: <%= vehicle.totalOffers %></h3>
                                </div>
                            </div>
                        </a>     
                    <% }); %>
                </section>
            <% }else{ %>
                <section class="welcome">
                    <p>There are no vehicles available for sale.</p>
                </section>
            <% } %>
        </main>
<%- include ('../partials/footer.ejs')%>